<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/problem_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        tools:text="Type" />

    <TextView
        android:id="@+id/problem_address_textview"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/problem_type_textview"
        tools:text="Adresse" />

    <TextView
        android:id="@+id/problem_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/problem_type_textview"
        android:layout_below="@+id/problem_type_textview"
        tools:text="Description" />

</RelativeLayout>